<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alimert.passportreader">
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.alimert.passportreader.MainApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.alimert.passportreader.ui.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.tananaev.passportreader.REQUEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!--<intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />-->

        </activity>

        <activity
            android:name="com.alimert.library.CaptureActivity"
            android:screenOrientation="landscape"/>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

    </application>

</manifest>
